                url: window.location + "/api/images",
                data: { base64Data: base64 },
                dataType: "json",
                complete: function (e, f, g) {
                    console.log("completed", e, f, g);
                    $("#message").text(e.responseText);
                },
                success: function (e, f, g) {
                    console.log("success" +
